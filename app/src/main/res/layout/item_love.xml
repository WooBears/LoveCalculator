<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alan"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="@+id/parent"
        app:layout_constraintTop_toTopOf="@+id/parent"/>

    <TextView
        android:id="@+id/tv_sname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sam"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="@+id/tv_fname"
       app:layout_constraintTop_toBottomOf="@+id/tv_fname"/>

    <TextView
        android:id="@+id/tv_hint_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love Percentage:"
        android:layout_marginStart="80dp"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@+id/tv_fname"
        app:layout_constraintTop_toTopOf="@+id/parent" />

    <TextView
        android:id="@+id/tv_res_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="50"
        app:layout_constraintStart_toEndOf="@+id/tv_hint_percentage"
        app:layout_constraintTop_toTopOf="@+id/parent"/>

    <TextView
        android:id="@+id/tv_hint_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love Result:"
        android:layout_marginStart="80dp"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@+id/tv_sname"
        app:layout_constraintBottom_toBottomOf="@+id/parent"/>

    <TextView
        android:id="@+id/tv_item_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="The winner is Love"
        app:layout_constraintStart_toEndOf="@+id/tv_hint_result"
        app:layout_constraintBottom_toBottomOf="@+id/parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>